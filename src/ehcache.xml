<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">

    <diskStore path="java.io.tmpdir"/>

    <defaultCache maxEntriesLocalHeap="3600" eternal="false" overflowToDisk="true"
                  timeToIdleSeconds="180" timeToLiveSeconds="180"/>

    <!-- 话题相关的cache -->
    <cache name="topic"
           maxElementsInMemory="1000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="indexTopicPage"
           maxElementsInMemory="1000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="moduleTopicPage"
           maxElementsInMemory="1000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="subModuleTopicPage"
           maxElementsInMemory="1000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="3600"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <!-- 主界面及侧边栏相关的cache -->
    <cache name="moduleList"
           maxElementsInMemory="1"
           eternal="true" />

    <cache name="upTopicList"
           maxElementsInMemory="1"
           eternal="true" />

    <cache name="hotTopicList"
           maxElementsInMemory="1"
           eternal="true" />

    <!-- 回帖相关的cache -->
    <cache name="postPage"
           maxElementsInMemory="3000"
           eternal="true"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="50" />

    <!-- 回帖的回复相关的cache -->
    <cache name="replyPage"
           maxElementsInMemory="8000"
           eternal="true"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="30" />

</ehcache>
